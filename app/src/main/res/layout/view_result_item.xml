<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_recycler_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/result_recycler_item_rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/result_recycler_item_resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/result_recycler_item_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/result_recycler_item_sexImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>